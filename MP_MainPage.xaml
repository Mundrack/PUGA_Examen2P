<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExamenIIMateoPuga.MainPage"
             Title="Convertidor de Unidades">
    <VerticalStackLayout Padding="20">
        <!-- Selector de Unidades -->
        <Label Text="De:"
               FontAttributes="Bold" />
        <Picker x:Name="FromUnitPicker" />

        <Label Text="A:"
               FontAttributes="Bold" />
        <Picker x:Name="ToUnitPicker" />

        <!-- Entrada de Cantidad -->
        <Label Text="Cantidad:"
               FontAttributes="Bold" />
        <Entry x:Name="InputEntry" Keyboard="Numeric" Placeholder="Ingrese cantidad" />

        <!-- Botones -->
        <Button x:Name="ConvertButton"
                Text="Convertir"
                Clicked="OnConvertClicked" />
        <Button x:Name="ClearButton"
                Text="Limpiar"
                Clicked="OnClearClicked"
                BackgroundColor="Gray" />

        <!-- Resultado -->
        <Label x:Name="ResultLabel"
               FontSize="20"
               HorizontalOptions="Center"
               TextColor="DarkBlue" />
    </VerticalStackLayout>
</ContentPage>

